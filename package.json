{
  "name": "Ethernotes",
  "version": "0.1.0",
  "description": "Private, zero-knowledge notes app",
  "main": "src/app.js",
  "scripts": {
    "setup": "npm run setup-global && npm install && ./node_modules/.bin/cordova platform add ios android && npm run build",
    "setup-global": "npm install -g browserify uglify-js watchify gulp jest-cli",
    "build": "npm run build-scripts && npm run build-styles",
    "build-scripts": "browserify src/app.js | uglifyjs -cm --stats > www/js/ethernotes.js",
    "build-styles": "gulp styles",
    "build-dev": "npm run build-scripts-dev && npm run build-styles-dev",
    "build-scripts-dev": "browserify src/app.js -o www/js/ethernotes.js",
    "build-styles-dev": "gulp styles-dev",
    "start": "npm run build-dev && open www/index.html",
    "android": "./node_modules/.bin/cordova run android",
    "ios": "./node_modules/.bin/cordova run ios",
    "watch": "gulp watch",
    "tests": "gulp watch-tests",
    "test": "jest"
  },
  "author": "tommy-carlos williams <tommy@devgeeks.org>",
  "license": "MIT",
  "dependencies": {
    "react-router": "^0.11.3"
  },
  "devDependencies": {
    "cordova": "^4.1.2",
    "envify": "~1.2.1",
    "es6-promise": "~1.0.0",
    "flux": "^2.0.1",
    "gulp": "~3.8.5",
    "gulp-autoprefixer": "0.0.8",
    "gulp-concat": "~2.2.0",
    "gulp-less": "^1.3.6",
    "gulp-minify-css": "~0.3.6",
    "gulp-shell": "~0.2.7",
    "path": "^0.4.9",
    "react": "~0.12.0",
    "react-router": "^0.11.3",
    "react-tools": "^0.12.1",
    "reactify": "^0.17.1",
    "tinyvents": "^0.3.0"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "jest": {
    "testFileExtensions": [
      "js"
    ],
    "scriptPreprocessor": "<rootDir>/preprocessor.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-tools"
    ]
  }
}
